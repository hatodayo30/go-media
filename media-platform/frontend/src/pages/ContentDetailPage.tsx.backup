                  {(activeTab === "followers" ? followers : following).map(
                    (follow) => {
                      const user =
                        activeTab === "followers"
                          ? follow.follower
                          : follow.following;
                      if (!user) return null;

                      return (
                        <div
                          key={follow.id}
                          style={{
                            display: "flex",
                            alignItems: "center",
                            padding: "0.75rem",
                            borderBottom: "1px solid #f3f4f6",
